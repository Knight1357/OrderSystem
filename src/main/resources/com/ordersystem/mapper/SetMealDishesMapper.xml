<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ordersystem.mapper.SetMealDishesMapper">
    <!--添加套餐菜品-->
    <insert id="add">
        insert into
            setmeal_dish(setmeal_id,dish_id,name,price,copies,
                         create_time, update_time,create_user, update_user)
        values(#{setmealId},#{dishId},#{name},#{price},#{copies},
               #{createTime},#{updateTime},
               #{createUser},#{updateUser})
    </insert>
    <!--通过id查询套餐菜品-->
    <select id="selectById" resultType="com.ordersystem.pojo.DishFlavor">
        select *
        from setmeal_dish where setmeal_id=#{id};
    </select>
    <!--修改套餐菜品信息-->
    <update id="update" useGeneratedKeys="true" keyProperty="id">
        update setmeal_dish
        where id=#{id}
        <set>
            name=#{name},
            value=#{value},
            update_time=#{updateTime},
            update_user=#{updateUser}
        </set>
    </update>
</mapper>